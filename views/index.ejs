<!doctype html>
<html lang="pt-br">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="/css/bootstrap.css">

  <title>Acompanhamento de PRs</title>
</head>

<body>

  <a href="/create">Nova PR</a>

  <table class="table table-hover">
    <thead class="thead-light">
      <tr>
        <th scope="col">Descrição</th>
        <th scope="col">Setor</th>
        <th scope="col">Data</th>
        <th scope="col">Valor Original</th>
        <th scope="col">Valor da PR</th>
        <th scope="col">Data de Recebimento</th>
        <th scope="col">Valor Recebido</th>
        <th scope="col">Diferença</th>
      </tr>
    </thead>
    <tbody>

      <% for(let i = 0; i < pr.length; i++) { %>
      <tr class="table-success">
        <th scope="row">
          <a data-toggle="collapse" href="<%= '.pr' + pr[i].id_pr %>">
            <%= pr[i].pr_name %>
          </a>
        </th>
        <td><%= pr[i].pr_sector %></td>
        <td><%= pr[i].pr_date %></td>
        <td><%= pr[i].pr_value %></td>
        <td></td>
        <td></td>
        <td></td>
        <td><%= pr[i].pr_diff %></td>
      </tr>

        <% for(let j = 0; j < action.length; j++) { %>
          <% if(pr[i].id_pr == action[j].fk_pr) { %>
            <tr class="collapse <%= 'pr' + action[j].fk_pr %>">
              <th scope="row">
                <div class="collapse <%= 'pr' + action[j].fk_pr %>"><%= action[j].action_name %></div>
              </th>
              <td>
                <div class="collapse <%= 'pr' + action[j].fk_pr %>"><%= action[j].pr_sector %></div>
              </td>
              <td>
                <div class="collapse <%= 'pr' + action[j].fk_pr %>"><%= action[j].pr_date %></div>
              </td>
              <td>
                <div class="collapse <%= 'pr' + action[j].fk_pr %>"><%= action[j].action_original_value %></div>
              </td>
              <td>
                <div class="collapse <%= 'pr' + action[j].fk_pr %>"></div>
              </td>
              <td>
                <div class="collapse <%= 'pr' + action[j].fk_pr %>"><%= action[j].action_ressarciment_date %></div>
              </td>
              <td>
                <div class="collapse <%= 'pr' + action[j].fk_pr %>"><%= action[j].action_ressarciment_value %></div>
              </td>
              <td>
                <div class="collapse <%= 'pr' + action[j].fk_pr %>"></div>
              </td>
            </tr>
          <% } %>
        <% } %>

      <% } %>

  <script>
    window.$ = window.jQuery = require('jquery')
    window.Bootstrap = require('bootstrap')
  </script>

</body>

</html>